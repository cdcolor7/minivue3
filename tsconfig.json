{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": false,
    "target": "es2016",
    "module": "esnext",
    "rootDir": ".", 
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowJs": false,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "paths":{
      "@minivue3/*": ["packages/*/lib"],
      "minivue3": ["packages/vue/lib"]
    }
  }
}
